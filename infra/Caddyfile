{
    # Global options
    auto_https off
    http_port 80
    https_port 443
    admin off
}

# HTTP site handler
:80 {
    # Root directory for all static files
    root * /usr/share/caddy
    
    # Try files or serve 404.html as fallback
    try_files {path} /404.html
    
    # Serve static files
    file_server
    
    # Logging
    log {
        output stdout
        format json
    }
}

# Default site handler
:443 {
    # Enable TLS with self-signed certificate
    tls internal {
        protocols tls1.2 tls1.3
    }
    
    # Compression
    encode gzip
    
    # Root directory for all static files
    root * /usr/share/caddy
    
    # Try files or serve index.html as fallback
    try_files {path} /index.html
    
    # Serve static files
    file_server
    
    # Logging
    log {
        output stdout
        format json
    }
}
