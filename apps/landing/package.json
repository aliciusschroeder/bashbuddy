{
  "name": "@bashbuddy/landing",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "PUBLIC_ENVIRONMENT=development vite dev --port 5175 --host",
    "dev:env": "infisical run --env dev -- pnpm dev",
    "dev:dotenv": "dotenv -e ../../.env -- pnpm dev",
    "start": "node build",
    "start:env": "infisical run --env prod -- node build",
    "build": "pnpm -F envs ensure-env && vite build",
    "build:env": "infisical run --env dev -- vite build",
    "preview": "vite preview",
    "preview:env": "infisical run --env dev -- vite preview",
    "i18n": "paraglide-js compile --project project.inlang",
    "pretypecheck": "pnpm i18n",
    "typecheck": "CI=1 svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "typecheck:watch": "CI=1 svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "prelint": "pnpm i18n",
    "lint": "eslint",
    "add-ui": "bunx shadcn-svelte@next add"
  },
  "devDependencies": {
    "@bashbuddy/eslint-config": "workspace:*",
    "@bashbuddy/prettier-config": "workspace:*",
    "@bashbuddy/tsconfig": "workspace:*",
    "@sveltejs/adapter-static": "^3.0.8",
    "@sveltejs/enhanced-img": "catalog:",
    "@sveltejs/kit": "catalog:",
    "@sveltejs/vite-plugin-svelte": "catalog:",
    "autoprefixer": "^10.4.20",
    "bits-ui": "catalog:",
    "clsx": "catalog:",
    "eslint": "catalog:",
    "formsnap": "2.0.0-next.1",
    "globals": "^15.0.0",
    "mdsvex": "catalog:",
    "mode-watcher": "^0.4.1",
    "prettier": "catalog:",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "svelte": "catalog:",
    "svelte-check": "catalog:",
    "svelte-seo": "catalog:",
    "svelte-sonner": "^0.3.28",
    "sveltekit-superforms": "^2.20.0",
    "tailwind-merge": "^2.5.4",
    "tailwind-variants": "^0.2.1",
    "tailwindcss": "catalog:",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "catalog:",
    "typescript-eslint": "^8.0.0",
    "vite": "catalog:",
    "zod": "^3.23.8"
  },
  "dependencies": {
    "@bashbuddy/logger": "workspace:*",
    "@bashbuddy/consts": "workspace:*",
    "@sentry/sveltekit": "^8.50.0",
    "@inlang/paraglide-sveltekit": "^0.15.5",
    "@tailwindcss/typography": "^0.5.15",
    "lucide-svelte": "catalog:",
    "posthog-js": "^1.194.1"
  },
  "prettier": "@bashbuddy/prettier-config",
  "files": [
    "build"
  ]
}
